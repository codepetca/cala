{
  "name": "trip-planner",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel run dev",
    "dev:web": "pnpm --filter=web dev",
    "dev:convex": "pnpm --filter=backend convex:dev",
    "build": "pnpm --recursive run build",
    "build:web": "pnpm --filter=web build",
    "generate:schemas": "pnpm --filter=ai generate",
    "validate:schemas": "pnpm --filter=ai validate-schemas",
    "lint": "pnpm --recursive run lint",
    "typecheck": "pnpm --recursive run typecheck",
    "test": "pnpm --recursive run test",
    "test:watch": "vitest --watch",
    "test:e2e": "pnpm --filter=web test:e2e",
    "test:integration": "vitest run tests/integration/",
    "ci:check": "pnpm run validate:schemas && pnpm run typecheck && pnpm run test"
  },
  "dependencies": {
    "convex": "^1.6.0",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.2.0",
    "nanoid": "^5.0.4",
    "next": "14.2.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "^3.4.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "jsdom": "^26.1.0",
    "playwright": "^1.44.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "vitest": "^1.4.0"
  }
}